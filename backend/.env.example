# 教学系统环境变量配置
# 复制此文件为 .env 并修改配置

# ========== 基础配置 ==========
PROJECT_NAME=TeachingPlatform
API_V1_STR=/api/v1
SECRET_KEY=change-this-secret-key-in-production-abcdefghijk
ACCESS_TOKEN_EXPIRE_MINUTES=60

# ========== 数据库配置 ==========
# Docker Compose 环境使用服务名，单独运行使用 localhost
DATABASE_URL=mysql+pymysql://root:teaching2024@mysql:3306/teaching_platform

# ========== Redis 配置 ==========
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ========== ComfyUI 队列配置 ==========
# 开发环境并发数
COMFY_MAX_CONCURRENT=2
# 生产环境并发数
COMFY_MAX_CONCURRENT_PROD=10
# GPU 服务器地址
COMFY_GPU_HOST=192.168.150.2
